<?xml version="1.0" encoding="utf-8"?>
<!--
    button_background.xml - Background style for floating buttons

    This defines how the floating buttons look:
    - Rounded corners
    - Semi-transparent background
    - Shadow/elevation

    For beginners: This is a "drawable" - a reusable graphic
    that can be applied to any view as a background.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color with transparency -->
    <!--
        Color format: #AARRGGBB
        AA = Alpha (transparency) - CC = 80% opaque
        RRGGBB = Red, Green, Blue components
    -->
    <solid android:color="#CC1976D2" />

    <!-- Rounded corners (makes it look modern) -->
    <corners android:radius="28dp" />

    <!-- Optional: Add a subtle border -->
    <stroke
        android:width="2dp"
        android:color="#E0E0E0" />

    <!-- Padding inside the shape -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>