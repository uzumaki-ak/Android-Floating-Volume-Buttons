<?xml version="1.0" encoding="utf-8"?>
<!--
    dimens.xml - Dimension values for the app

    This file defines standard sizes used throughout the app:
    - Padding and margins
    - Text sizes
    - Element dimensions
    - Spacing values

    For beginners: Instead of hardcoding sizes like "16dp" everywhere,
    you define them here and reference them by name. This makes it
    easy to maintain consistent spacing throughout your app.
-->
<resources>
    <!-- Standard Spacing -->
    <dimen name="spacing_tiny">4dp</dimen>
    <dimen name="spacing_small">8dp</dimen>
    <dimen name="spacing_medium">16dp</dimen>
    <dimen name="spacing_large">24dp</dimen>
    <dimen name="spacing_xlarge">32dp</dimen>

    <!-- Card Dimensions -->
    <dimen name="card_corner_radius">12dp</dimen>
    <dimen name="card_elevation">4dp</dimen>

    <!-- Button Dimensions -->
    <dimen name="button_height">56dp</dimen>
    <dimen name="button_corner_radius">12dp</dimen>

    <!-- Floating Button Dimensions -->
    <dimen name="floating_button_size">56dp</dimen>
    <dimen name="floating_button_radius">28dp</dimen>
    <dimen name="floating_button_elevation">16dp</dimen>

    <!-- Icon Sizes -->
    <dimen name="icon_small">24dp</dimen>
    <dimen name="icon_medium">32dp</dimen>
    <dimen name="icon_large">48dp</dimen>
    <dimen name="icon_xlarge">80dp</dimen>

    <!-- Text Sizes -->
    <dimen name="text_tiny">10sp</dimen>
    <dimen name="text_small">12sp</dimen>
    <dimen name="text_normal">14sp</dimen>
    <dimen name="text_medium">16sp</dimen>
    <dimen name="text_large">20sp</dimen>
    <dimen name="text_xlarge">24sp</dimen>
    <dimen name="text_xxlarge">32sp</dimen>
</resources>